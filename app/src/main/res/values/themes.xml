        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorPrimaryDark">@color/dark_blue</item>
        <item name="colorAccent">@color/black</item>
        <item name="fontFamily">@font/cairo</item>
        <!-- Customize your theme here. -->
