<?xml version="1.0" encoding="utf-8"?>
<layout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    tools:context=".framework.ui.reports.MonthlyReportFragment">
    <data>

        <!--        <variable-->
        <!--            name="viewModel"-->
        <!--            type="com.tbi.supplierplus.framework.ui.reports.ReportsViewModel" />-->
    </data>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/mainback"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >
    <LinearLayout
        android:id="@+id/linearID"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="90dp"
        android:layout_marginHorizontal="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">



        <TextView
            android:id="@+id/colection_d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:padding="6dp"
            android:text=" اجمالي المبيعات الشهرية "
            android:textColor="#008000"
            android:textStyle="bold" />


    </LinearLayout>

     <LinearLayout
        app:layout_constraintTop_toBottomOf="@+id/linearID"
        android:layout_marginHorizontal="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">



         <TextView
             android:id="@+id/colection"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_margin="6dp"
             android:layout_weight="2"
             android:gravity="center_horizontal"
             android:padding="6dp"
             android:text="0.0"
             android:textColor="#008000"
             android:textStyle="bold"
             tools:ignore="NewApi" />


    </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>



