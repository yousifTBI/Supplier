<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="data"
            type="com.tbi.supplierplus.business.pojo.reports.Sales" />
    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="8dp"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView49"
            style="@style/textStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.16"
            android:gravity="center"
            android:text="@{String.valueOf(data.totalPrice)}"
            tools:text="total" />

        <TextView
            android:id="@+id/textView48"
            style="@style/textStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.16"
            android:gravity="center"

            android:text="@{String.valueOf(data.discount)}"
            tools:text="discount" />

        <TextView
            android:id="@+id/textView47"
            style="@style/textStyle"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.16"
            android:gravity="center"
            android:text="@{String.valueOf(data.unitPrice)}"
            tools:text="price" />


        <TextView
            android:id="@+id/textView46"
            style="@style/textStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.16"
            android:gravity="center"
            android:text="@{String.valueOf(data.size)}"
            tools:text="size"/>

        <TextView
            android:id="@+id/textView43"
            style="@style/textStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.16"
            android:gravity="center"
            android:text="@{String.valueOf(data.numberOfUnits)}"
            tools:text="quantity"/>


        <TextView
            android:id="@+id/textView42"
            style="@style/textStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.16"
            android:gravity="center"
            android:text="@{data.items}"
            tools:text="name"/>

    </LinearLayout>
</layout>