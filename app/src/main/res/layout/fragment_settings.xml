<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".framework.ui.settings.SettingsFragment">

        <!-- TODO: Update blank fragment layout -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/reports_card"
            android:layout_width="280dp"
            android:layout_height="208dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="8dp"

            android:layout_marginTop="24dp"
            android:theme="@style/Theme.MaterialComponents.Light"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            app:cardMaxElevation="12dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/reports"
                    android:layout_width="60dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:src="@drawable/adddd"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:layout_marginHorizontal="40dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/blue_rounded_filled100"
                    android:gravity="center"

                    android:text="اضافه منتج"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/reports" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/reports_edit_pric"
            android:layout_width="300dp"
            android:layout_height="206dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="8dp"

            android:layout_marginTop="16dp"
            android:theme="@style/Theme.MaterialComponents.Light"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            app:cardMaxElevation="12dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reports_card"
            tools:ignore="MissingConstraints">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/edit_price"
                    android:layout_width="60dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:src="@drawable/edit"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:layout_marginHorizontal="40dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/blue_rounded_filled100"
                    android:gravity="center"

                    android:text="تعديل سعر خاص"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edit_price" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/reports_edit_Special_pric"
            android:layout_width="308dp"
            android:layout_height="205dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="8dp"

            android:layout_marginTop="16dp"
            android:theme="@style/Theme.MaterialComponents.Light"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            app:cardMaxElevation="12dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reports_edit_pric"
            tools:ignore="MissingConstraints">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/edit_Special_price"
                    android:layout_width="60dp"
                    android:layout_height="100dp"
                    android:src="@drawable/edit"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/edit_public_price"

                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:layout_marginHorizontal="40dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/blue_rounded_filled100"
                    android:gravity="center"

                    android:text="تعديل سعر عام"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edit_Special_price" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>