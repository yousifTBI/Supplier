<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/mainback"
        tools:context=".framework.ui.sales.customers.product_selection.ChangeSpecialPriceActivity">



        <TextView
            android:visibility="gone"
            android:id="@+id/textView80"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            app:layout_constraintBottom_toTopOf="@+id/button2b"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/customer_card" />
        <com.github.ybq.android.spinkit.SpinKitView
            android:id="@+id/spin_kit"
            style="@style/SpinKitView.Large.Circle"
            android:layout_width="121dp"
            android:layout_height="135dp"
            android:layout_gravity="center"
            app:SpinKit_Color="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <EditText
            android:id="@+id/editTextTextPersonName3"
            android:layout_width="3dp"
            android:layout_height="20dp"
            android:text="Name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="20dp"/>


        <LinearLayout
            android:id="@+id/linearLayoutimg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/background"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imgview"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:src="@drawable/editprice"
                android:textSize="20dp"
                android:scaleType="fitXY"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="8dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayoutimg">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="135dp"
                    android:layout_height="78dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/search_row"
                    android:padding="10dp"
                    android:text="اضف المنتج "
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/btnPopup"
                    android:layout_width="220dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:background="#65F0F0F1"
                    android:padding="10dp"
                    android:text="تغير سعر منتج لعميل"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/textView22"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>



        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#3A606E"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <EditText
                android:id="@+id/editTextTextPersonName4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Name" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_marginStart="20dp"
                android:background="#3A606E"

                android:visibility="gone"

                android:text="تغير سعر منتج لعميل   "
                android:textColor="#F49F0A"
                android:textSize="24dp"
                />
        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/customer_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:layout_marginTop="72dp"
            android:layout_marginEnd="16dp"
            android:padding="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            app:cardMaxElevation="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
            tools:ignore="MissingConstraints">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="312dp">


                <TextView
                    android:id="@+id/ItemId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="1dp" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="200dp"

                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/blue_border"
                    android:foregroundGravity="center"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    app:layout_constraintEnd_toStartOf="@+id/textView4"
                    app:layout_constraintTop_toBottomOf="@+id/textView3" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="200dp"

                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/blue_border"
                    android:foregroundGravity="center"
                    android:gravity="center"

                    app:layout_constraintEnd_toStartOf="@+id/textView6"
                    app:layout_constraintTop_toBottomOf="@+id/textView8" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="200dp"

                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/blue_border"
                    android:foregroundGravity="center"

                    android:gravity="center"
                    app:layout_constraintEnd_toStartOf="@+id/textView"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView4"
                    style="@style/textStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="39dp"
                    android:layout_marginEnd="16dp"

                    android:text="سعر الحاللى:"

                    android:textSize="18dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView6" />

                <TextView
                    android:id="@+id/textView6"
                    style="@style/textStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="33dp"

                    android:layout_marginEnd="16dp"
                    android:text="كود المنتج  :"
                    android:textSize="18dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView" />

                <TextView
                    android:id="@+id/textView"
                    style="@style/textStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:layout_marginEnd="16dp"

                    android:text="اسم المنتج :"
                    android:textSize="18dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textinput_counterj"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"


                    android:layout_marginEnd="8dp"
                    android:elevation="234dp"
                    app:layout_constraintBottom_toBottomOf="@+id/textView36"
                    app:layout_constraintEnd_toStartOf="@+id/textView36"
                    app:layout_constraintTop_toTopOf="@+id/textView36">

                    <EditText
                        android:id="@+id/counterEditTextm"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"


                        android:ems="10"
                        android:hint="السعر الجديد"
                        android:inputType="numberDecimal"

                        />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/textView36"
                    android:layout_width="98dp"
                    android:layout_height="32dp"

                    android:layout_marginTop="39dp"
                    android:layout_marginEnd="8dp"
                    android:text="السعر الجديد"
                    android:textColor="#3A606E"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView4" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <Button
            android:id="@+id/button2b"
            android:layout_width="246dp"
            android:layout_height="61dp"
            android:layout_centerInParent="true"


            android:layout_marginTop="37dp"
            android:background="@drawable/blue_rounded_filled20"
            android:paddingHorizontal="5dp"
            android:paddingStart="20dp"
            android:paddingEnd="40dp"
            android:text="تغير سعر المنتج"
            android:textColor="@color/white"
            android:textSize="22dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"


            app:layout_constraintTop_toBottomOf="@+id/customer_card" />



    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
</layout>