<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".framework.ui.sales.customerSettingPrice.CustomerSettingFragment">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/mainback">


            <LinearLayout
                android:id="@+id/linearLayoutimg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/background"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/imgview"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"


                    android:src="@drawable/collecion"

                    android:textSize="20dp"
                    android:scaleType="fitXY"/>


            </LinearLayout>

            <ImageView
                android:visibility="gone"
                android:id="@+id/balance_card"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_margin="6dp"
                android:layout_marginStart="16dp"
                android:src="@drawable/ba1"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="637dp" />

            <ImageView
                android:id="@+id/collect_card"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginTop="132dp"
                android:layout_marginEnd="88dp"
                android:src="@drawable/daly"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayoutimg" />


            <ImageView
                android:id="@+id/reports_card"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="56dp"
                android:src="@drawable/client"
                app:layout_constraintBottom_toBottomOf="@+id/collect_card"
                app:layout_constraintEnd_toStartOf="@+id/collect_card"
                app:layout_constraintTop_toTopOf="@+id/collect_card"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/textView900"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" عميل"
                app:layout_constraintEnd_toEndOf="@+id/reports_card"
                app:layout_constraintStart_toStartOf="@+id/reports_card"
                app:layout_constraintTop_toBottomOf="@+id/reports_card" />

            <TextView
                android:visibility="gone"
                android:id="@+id/textView89"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="الرصيد الإفتتاحي"
                app:layout_constraintEnd_toEndOf="@+id/balance_card"
                app:layout_constraintStart_toStartOf="@+id/balance_card"
                app:layout_constraintTop_toBottomOf="@+id/balance_card" />

            <TextView
                android:id="@+id/textView90"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="تحصيل من العملاء المتأخرين"
                app:layout_constraintEnd_toEndOf="@+id/collect_card"
                app:layout_constraintStart_toStartOf="@+id/collect_card"
                app:layout_constraintTop_toBottomOf="@+id/collect_card" />




        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</layout>